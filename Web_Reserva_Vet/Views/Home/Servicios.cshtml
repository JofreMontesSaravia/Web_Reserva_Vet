@{
    ViewData["Title"] = "Servicios - DocPet";
}

<div class="container my-5">
    <div class="mb-4" style="margin-top: 20px;">
        <a href="/Home/Index" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </div>

    <h1 class="text-center mb-4 text-primary">Nuestros Servicios</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Consulta Médica -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="~/Fotos/consultorio.jpg" class="card-img-top" alt="Consulta médica">
                <div class="card-body">
                    <h5 class="card-title">Consulta Médica</h5>
                    <p class="card-text">Evaluación general, diagnóstico y seguimiento clínico para el bienestar de tu mascota.</p>
                    <a href="~/Home/Citas" class="btn btn-primary mt-2">Agendar cita</a>
                </div>
            </div>
        </div>

        <!-- Vacunación -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="~/Fotos/Vacuna.jpg" class="card-img-top" alt="Vacunación">
                <div class="card-body">
                    <h5 class="card-title">Vacunación</h5>
                    <p class="card-text">Protección segura y eficaz contra enfermedades comunes. Planes completos de vacunación.</p>
                    <a href="~/Home/Citas" class="btn btn-primary mt-2">Agendar cita</a>
                </div>
            </div>
        </div>

        <!-- Estética y Baño -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="~/Fotos/Baño.jpg" class="card-img-top" alt="Estética y baño">
                <div class="card-body">
                    <h5 class="card-title">Estética y Baño</h5>
                    <p class="card-text">Baño, corte de pelo y limpieza para todas las razas. Porque tu mascota también merece verse bien.</p>
                    <a href="~/Home/Citas" class="btn btn-primary mt-2">Agendar cita</a>
                </div>
            </div>
        </div>

        <!-- Cirugías -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="~/Fotos/cirugia.jpg" class="card-img-top" alt="Cirugías">
                <div class="card-body">
                    <h5 class="card-title">Cirugías</h5>
                    <p class="card-text">Intervenciones quirúrgicas seguras realizadas por profesionales altamente capacitados.</p>
                    <a href="~/Home/Citas" class="btn btn-primary mt-2">Agendar cita</a>
                </div>
            </div>
        </div>

        <!-- Odontología -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="~/Fotos/Odontologia.jpg" class="card-img-top" alt="Odontología veterinaria">
                <div class="card-body">
                    <h5 class="card-title">Odontología</h5>
                    <p class="card-text">Limpieza dental, extracciones y cuidado oral especializado para evitar infecciones y dolor.</p>
                    <a href="~/Home/Citas" class="btn btn-primary mt-2">Agendar cita</a>
                </div>
            </div>
        </div>

        <!-- Emergencias -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="~/Fotos/Emergencia.jpg" class="card-img-top" alt="Emergencias">
                <div class="card-body">
                    <h5 class="card-title">Emergencias 24/7</h5>
                    <p class="card-text">Atención inmediata para casos urgentes, disponible los 7 días de la semana, las 24 horas.</p>
                    <a href="~/Home/Contacto" class="btn btn-primary mt-2">Agendar cita</a>
                </div>
            </div>
        </div>
    </div>
</div>


