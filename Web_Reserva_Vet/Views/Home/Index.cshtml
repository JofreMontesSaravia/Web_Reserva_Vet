@{
    ViewBag.Title = "DOCPET";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/style.css" />
}

<!-- Hero Section -->
<section style="position: relative; text-align: center;">
    <img src="~/Fotos/gato-f.png" alt="Banner" style="width:100%; height: 400px; object-fit: cover;" />
    <div style="position: absolute; top: 65%; left: 50%; transform: translate(-50%, -50%); color: white;">
        <h1>Cuidamos a tu mejor amigo</h1>
        <p>Servicios veterinarios de calidad</p>
        <a href="/Auth/Login" class="btn-iniciar">Iniciar sesión</a>
        <a href="/Auth/Register" class="btn-registrar">Registrarse</a>
    </div>
</section>

<!-- Nosotros -->
<section class="about mt-5" id="conocenos">
    <h2 class="section-title0">Sobre <span class="highlight">nosotros</span></h2>
    <div class="about-container">
        <!-- Columna de imágenes -->
        <div class="image-column">
            <div class="image-stack">
                <img src="~/Fotos/vet.png" alt="Clínica Veterinaria" class="featured-image">
                <img src="~/Fotos/vet.png" alt="Equipo DocPet" class="secondary-image">
            </div>
        </div>

        <!-- Columna de texto -->
        <div class="text-column">
            <div class="features">
                <div class="feature-item">
                    <h3 class="feature-title">El "Efecto Huella"</h3>
                    <p style="font-family: 'Franklin Gothic Medium'; font-size:0.97rem;">
                        En DocPet, somos más que una clínica veterinaria: cuidamos las historias de amor entre
                        humanos y mascotas. Surgimos con una idea clara: "¿Nos elegirían los animales?" Con más de
                        1,000 patitas atendidas, la respuesta es un ¡Sí! rotundo.
                    </p>
                </div>

                <div class="feature-item">
                    <h3 class="feature-title">Tecnología con Alma</h3>
                    <p style="font-family: 'Franklin Gothic Medium'; font-size:0.97rem;">
                        Contamos con equipos de
                        diagnóstico de última generación, pero nuestro verdadero secreto es
                        el "Protocolo Cariño": ningún tratamiento comienza sin antes ganarnos la confianza del
                        paciente con caricias y golosinas (¡100% saludables!).
                    </p>
                </div>

                <div class="feature-item">
                    <h3 class="feature-title">Sala de Espera Felina</h3>
                    <p style="font-family: 'Franklin Gothic Medium'; font-size:0.97rem;">
                        ¿Sabías que tenemos una
                        sala exclusiva para gatos con feromonas ambientales y música clásica?
                        Reducimos su estrés desde el momento en que entran.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Servicios -->
<section class="services-section mt-5" id="servicios">
    <h2 class="section-title0">Nuestros <span class="highlight">Servicios</span></h2>
    <div class="services-grid">
        <!-- Columna Izquierda -->
        <div class="services-column">
            <!-- Servicio 1 -->
            <div class="service-item">
                <div class="service-image-circle">
                    <img src="~/Fotos/baño.png" alt="Consultas veterinarias">
                </div>
                <div class="service-details">
                    <h3 class="service-title">Higiene</h3>
                    <p class="service-description">Limpieza del pelaje de tu mascota, asi como tambien cepillado de sus dientes</p>
                    <button class="btn-reservar">+ info</button>
                </div>
            </div>
            <!-- Servicio 3 -->
            <div class="service-item">
                <div class="service-image-circle">
                    <img src="~/Fotos/vacuna.png" alt="Vacunación">
                </div>
                <div class="service-details">
                    <h3 class="service-title">Vacunación</h3>
                    <p class="service-description">Programa completo de vacunas para su protección.</p>
                    <button class="btn-reservar">+ info</button>
                </div>
            </div>
        </div>

        <!-- Columna Derecha -->
        <div class="services-column">
            <!-- Servicio 5 -->
            <div class="service-item">
                <div class="service-image-circle">
                    <img src="~/Fotos/peinar.png" alt="Urgencias veterinarias">
                </div>
                <div class="service-details">
                    <h3 class="service-title">Cortes/estilo</h3>
                    <p class="service-description">Ofrecemos distintos estilos para variedad de razas</p>
                    <button class="btn-reservar">+ info</button>
                </div>
            </div>
            <!-- Servicio 6 -->
            <div class="service-item">
                <div class="service-image-circle">
                    <img src="~/Fotos/revisar.png" alt="Laboratorio veterinario">
                </div>
                <div class="service-details">
                    <h3 class="service-title">Revisión</h3>
                    <p class="service-description">Contamos con dispositivos tecnologicos para la revisión de tu mascota</p>
                    <button class="btn-reservar">+ info</button>
                </div>
            </div>
        </div>
    </div>
    <button class="btn-reservar-top" style="margin-left:30rem;">+ Descubre más servicios</button>
</section>

<!-- Ubicación -->
<section class="location-section" id="ubicacion">
    <h2 class="section-title0">Nuestra <span class="highlight">Ubicación</span></h2>
    <div class="map-container">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3901.965949600882!2d-76.9905429241649!3d-12.067025088137936!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c5f619ee3ec7%3A0x14206cb9cc452e4a!2sAv.%20La%20Encalada%2C%20Santiago%20de%20Surco%2015023!5e0!3m2!1ses-419!2spe!4v1718739557246!5m2!1ses-419!2spe"
                width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</section>





