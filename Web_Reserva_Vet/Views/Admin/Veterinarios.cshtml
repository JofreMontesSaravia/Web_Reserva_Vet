@model List<Web_Vet_Pet.ViewModels.VeterinarioAdminViewModel>
@{
    ViewBag.Title = "Veterinarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center mt-3">
            <h2>VETERINARIOS</h2>
            <span class="float-end"><i class="fa fa-bell"></i></span>
        </div>
    </div>
    <hr />
    <div class="row mt-4">
        <div class="col-8">
            <h5>Mis trabajadores ...
                <a href="#" title="Agregar veterinario" class="ms-2">
                    <span style="font-size:1.7rem;vertical-align:middle;">&#x2795;</span>
                </a>
            </h5>
        </div>
        <div class="col-4 text-end">
            <input type="text" class="form-control d-inline-block w-50" placeholder="?? Nombre" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Jornada</th>
                        <th>Phone Number</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var v in Model)
                    {
                        <tr>
                            <td>@v.Id</td>
                            <td>@v.Nombre</td>
                            <td>@v.Email</td>
                            <td>@v.Jornada</td>
                            <td><i class="fa fa-phone"></i> @v.PhoneNumber</td>
                            <td>
                                <a href="#" title="Editar"><i class="fa fa-pen-to-square"></i></a>
                                <a href="#" title="Eliminar" class="ms-2"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6">No hay veterinarios registrados.</td></tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .table th, .table td { vertical-align: middle; }
</style>
