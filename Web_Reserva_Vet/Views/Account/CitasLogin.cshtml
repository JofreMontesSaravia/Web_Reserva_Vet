@{
    ViewBag.Title = "Agendar Cita";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-section {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 10px;
        }
        .image-section img {
            max-width: 140%;
            border-radius: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="mb-4" style="margin-top: 20px;">
        <a href="/Account/IndexLogin" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </div>
        <div class="row align-items-center">
            <!-- Formulario -->
            <div class="col-md-6">
                <div class="form-section shadow">
                    <h2 class="mb-4">Agendar una Cita</h2>

                    <form asp-action="AgendarCita" method="post">
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre del Cliente</label>
                            <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                        </div>

                        <div class="mb-3">
                            <label for="Mascota" class="form-label">Nombre de la Mascota</label>
                            <input type="text" class="form-control" id="Mascota" name="Mascota" required>
                        </div>

                        <div class="mb-3">
                            <label for="TipoMascota" class="form-label">Tipo de Mascota</label>
                            <select class="form-select" id="TipoMascota" name="TipoMascota" required>
                                <option value="">Seleccione...</option>
                                <option>Perro</option>
                                <option>Gato</option>
                                <option>Hamster</option>
                                <option>Otro</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Asunto" class="form-label">Asunto</label>
                            <select class="form-select" id="Asunto" name="Asunto" required>
                                <option value="">Seleccione...</option>
                                <option>Baño y Estetica</option>
                                <option>Consulta Médica</option>
                                <option>Odontología</option>
                                <option>Cirugía</option>
                                <option>Vacunacion</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Fecha" class="form-label">Fecha de la Cita</label>
                            <input type="date" class="form-control" id="Fecha" name="Fecha" required>
                        </div>

                        <div class="mb-3">
                            <label for="Hora" class="form-label">Hora</label>
                            <input type="time" class="form-control" id="Hora" name="Hora" required>
                        </div>

                        <div class="mb-3">
                            <label for="Motivo" class="form-label">Comentarios adicionales</label>
                            <textarea class="form-control" id="Motivo" name="Motivo" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Agendar</button>
                        <a href="/Account/Citas" class="btn btn-secondary">Ver Citas</a>
                    </form>
                </div>
            </div> 
            <!-- Imagen -->
            <div class="col-md-6 image-section text-center mt-4 mt-md-0">
                  <img src="~/Fotos/citas.jpg" alt="Veterinaria" class="shadow">
             </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>