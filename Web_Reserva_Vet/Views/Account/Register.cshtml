@{
    ViewData["Title"] = "Registro";
}
@{
    Layout = null;
}

<style>
    /* Estilos para video de fondo */
    .video-bg {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100vw;
        min-height: 100vh;
        object-fit: cover;
        z-index: -1; /* detrás del contenido */
    }

    /* Contenedor del formulario centrado */
    .form-container {
        position: relative;
        max-width: 400px;
        margin: 80px auto;
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.85); /* fondo blanco translúcido */
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
        z-index: 1;
    }

    /* Estilos del formulario */
    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-docpet {
        padding: 10px 20px;
        background-color: #f9bc60;
        border: none;
        border-radius: 6px;
        color: #2c7a7b;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
    }

    p {
        margin-top: 15px;
        text-align: center;
    }

    p a {
        color: #2c7a7b;
        text-decoration: none;
        font-weight: bold;
    }
    p a:hover {
        text-decoration: underline;
    }
</style>

<!-- Video de fondo -->
<video autoplay muted loop class="video-bg">
    <source src="/videos/Veterinaria.mp4" type="video/mp4" />
    Tu navegador no soporta video HTML5.
</video>

<!-- Contenedor del formulario -->
<div class="form-container">
    <h2>@ViewData["Title"]</h2>
    <form id="registerForm" method="post" action="#">
        <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input id="email" name="email" type="email" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input id="password" name="password" type="password" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirmar contraseña</label>
            <input id="confirmPassword" name="confirmPassword" type="password" required class="form-control" />
        </div>
        <button type="submit" class="btn-docpet">Registrarme</button>
    </form>
    <p>
        ¿Ya tienes cuenta? <a href="/Account/Login">Inicia sesión aquí</a>
    </p>
</div>

<script>
    document.getElementById('registerForm').addEventListener('submit', function(e) {
        e.preventDefault();
        window.location.href = '/Account/Login';
    });
</script>

