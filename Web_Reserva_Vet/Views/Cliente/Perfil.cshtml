                <div class="mb-2">
                    <label>Nombre</label>
                    <input type="text" class="form-control" id="nuevoNombre" required />
                </div>
                <div class="mb-2">
                    <label>Raza</label>
                    <input type="text" class="form-control" id="nuevaRaza" required />
                </div>
                <div class="mb-2">
                    <label>Edad</label>
                    <input type="number" class="form-control" id="nuevaEdad" required />
                </div>
                <div>
                    <label>Descripción</label>
