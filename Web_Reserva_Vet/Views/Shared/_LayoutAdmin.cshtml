@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Panel Administrador</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            position: fixed;
            background-color: #f8f9fa;
            border-right: 1px solid #ccc;
            padding: 20px 10px;
        }

            .sidebar img {
                width: 100%;
                max-width: 120px;
                border-radius: 50%;
                display: block;
                margin: 0 auto 10px auto;
            }

            .sidebar a {
                display: block;
                padding: 10px;
                color: #333;
                text-decoration: none;
                font-weight: 500;
            }

                .sidebar a:hover {
                    background-color: #e2e6ea;
                    border-radius: 6px;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .main-content {
            margin-left: 220px;
            padding: 20px;
        }

        .footer-support {
            position: absolute;
            bottom: 15px;
            left: 10px;
            font-size: 12px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <img src="https://via.placeholder.com/120" alt="Logo" />
        <div class="text-center mb-3">@ViewBag.Name_Vet</div>

        <hr />
        <a href="/Administrador/Reservas"><i class="fa-solid fa-calendar-check"></i> Reservas</a>
        <a href="/Administrador/Veterinarios"><i class="fa-solid fa-user-doctor"></i> Veterinarios</a>
        <a href="/Administrador/Noticias"><i class="fa-solid fa-newspaper"></i> Noticias</a>
        <a href="/Administrador/Servicios"><i class="fa-solid fa-cart-plus"></i> Servicios</a>
        <a href="/Cuenta/Logout"><i class="fa-solid fa-right-from-bracket"></i> Salir</a>

        <div class="footer-support">
            <a href="#">¿Necesitas ayuda? / soporte</a>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

</body>
</html>
