@{
    var nombreUsuario = User.Identity.Name ?? "@Name_User";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Panel Cliente - Veterinaria</title>

    <!-- Bootstrap (si usas) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome para íconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            padding: 20px;
            border-right: 1px solid #ccc;
        }

            .sidebar .user-icon {
                font-size: 100px;
                text-align: center;
                margin: 0 auto 10px;
                display: block;
                color: #666;
            }

            .sidebar .username {
                text-align: center;
                font-weight: bold;
                margin-bottom: 30px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 10px;
                text-decoration: none;
                color: #333;
                border-radius: 5px;
                margin-bottom: 10px;
            }

                .sidebar a:hover {
                    background-color: #e2e6ea;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .main-content {
            flex-grow: 1;
            padding: 30px;
            background-color: #fff;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="text-center">
            <i class="fa fa-user-circle user-icon"></i>
            <div class="username">@nombreUsuario</div>
        </div>
        <a href="@Url.Action("Perfil", "Cliente")"><i class="fa fa-user"></i> Perfil</a>
        <a href="@Url.Action("Reservar", "Cliente")"><i class="fa fa-calendar-check"></i> Reservar</a>
        <a href="@Url.Action("Noticias", "Cliente")"><i class="fa fa-newspaper"></i> Noticias</a>
        <a href="@Url.Action("Configuracion", "Cliente")"><i class="fa fa-cog"></i> Configuración</a>
        <hr />
        <div class="d-flex justify-content-around mt-3">
            <a href="#"><i class="fab fa-whatsapp"></i></a>
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fa fa-question-circle"></i></a>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

</body>
</html>
